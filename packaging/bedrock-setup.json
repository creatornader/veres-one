{
  "product": "Veres One",
  "flow": [{
    "title": "Welcome",
    "image": "/images/setup-logo.svg",
    "subheading": "Welcome to the setup process for Veres One. The following steps will help you configure the software. Click next to continue.",
    "name": "Introduction"
  },
  {
    "name": "Set the domain for the software",
    "icon": {
      "name": "far fa-list-alt",
      "size": "65px",
      "color": "primary"
    },
    "subheading": "Please verify that the detected domain is appropriate.",
    "form": {
      "id": "domain",
      "model": {
        "domain": ""
      },
      "modelTemplate": "{\n\"domain\": window.location.host}",
      "schema": {
        "domain": {
          "placeholder": "Your domain",
          "minLength": 4,
          "validation": {
            "minLength": 4,
            "required": true,
            "regex": "^(((?!-))(xn--|_{1,1})?[a-z0-9-]{0,61}[a-z0-9]{1,1}.)*(xn--)?([a-z0-9-]{1,61}|[a-z0-9-]{1,30}.[a-z]{2,})$",
            "errors": {
              "invalid": "The domain you entered is invalid."
            }
          }
        }
      }
    }
  },
  {
    "name": "Specify the genesis node",
    "icon": {
      "name": "fas fa-network-wired",
      "size": "65px",
      "color": "primary"
    },
    "subheading": "Specify the host name for the genesis node. If this is the genesis node, leave blank.",
    "form": {
      "id": "genesisNode",
      "model": {
        "genesisNode": ""
      },
      "modelTemplate": "",
      "schema": {
        "genesisNode": {
          "placeholder": "Genesis node",
          "minLength": 4,
          "validation": {
            "minLength": 4,
            "required": false,
            "regex": "^(((?!-))(xn--|_{1,1})?[a-z0-9-]{0,61}[a-z0-9]{1,1}.)*(xn--)?([a-z0-9-]{1,61}|[a-z0-9-]{1,30}.[a-z]{2,})$",
            "errors": {
              "invalid": "The domain you entered is invalid."
            }
          }
        }
      }
    }
  },
  {
    "name": "Review and finish",
    "icon": {
      "name": "fas fa-check-circle",
      "size": "65px",
      "color": "primary"
    },
    "subheading": "Please review the information you entered and then click finish to complete the setup process."
  }],
  "vocab": {
    "domain": {
      "range": "string",
      "label": "Domain",
      "component":{"name": "br-q-input", "params": {"type": "url"}}
    },
    "email": {
      "range": "string",
      "label": "Email",
      "inputType": "email",
      "autocomplete": "username"
    },
    "genesisNode": {
      "range": "string",
      "label": "Genesis Node",
      "component":{"name": "br-q-input", "params": {"type": "url"}}
    },
    "password": {
      "range": "string",
      "label": "Password",
      "inputType": "masked",
      "autocomplete": "current-password"
    },
    "passwordConfirmation": {
      "range": "string",
      "label": "Confirm Password",
      "inputType": "masked",
      "autocomplete": "current-password"
    }
  },
  "configTemplate": "{\n\"domain\": domain.domain, \"admin_email\":admin.email, \"admin_password\": admin.password, \"genesis_node\": genesisNode.genesisNode}",
  "reviewTemplate": "[{\n\"title\": \"Domain\", \"fields\": [{\"name\": \"Domain\", \"value\": domain.domain}]}, {\"title\": \"Genesis Node\", \"fields\": [{\"name\": \"Genesis Node\", \"value\": genesisNode.genesisNode}]}]"
}
